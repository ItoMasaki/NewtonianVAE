<mujoco model="planar point mass">
  <include file="./common/skybox.xml"/>
  <include file="./common/visual.xml"/>
  <include file="./common/materials.xml"/>

  <option timestep="0.5" gravity="0 0 0">
    <flag contact="disable"/>
  </option>

  <default>
    <joint type="hinge" axis="0 0 1" limited="true" range="-.29 .29" damping="1"/>
    <motor gear=".1" ctrlrange="-1 1" ctrllimited="true"/>
  </default>

  <include file="environments/includes/defaults_ycb.xml"/>
  <include file="environments/includes/assets_006_mustard_bottle.xml"/>
  <include file="environments/includes/assets_005_tomato_soup_can.xml"/>

  <worldbody>
    <!--geom name="ground" type="plane" pos="0 0 0" size="3. 3. .1" material="grid"/-->
    <geom name="ground" type="plane" size="2 2 0.1" pos="0 0 0" rgba="0.1 0.9 0.1 1"/>

    <body name="camera" pos="0 0 .5">
      <light name="light" pos="0 0 1"/>
      <camera name="cam0" pos="0 0 .5" quat="1 0 0 0"/>
      <joint name="root_x" type="slide"  pos="0 0 0" axis="1 0 0"/>
      <joint name="root_y" type="slide"  pos="0 0 0" axis="0 1 0"/>
      <joint name="shoulder" limited="false"/>
      <geom name="cam" pos="0 0 1.75" material="target" type="sphere" size=".015"/>
    </body>

    <body name="target_object" pos="0 0 0.01">
      <joint name="musterd_bottle_x" pos="0 0 0" type="slide" axis='1 0 0'/>
      <joint name="musterd_bottle_y" pos="0 0 0" type="slide" axis='0 1 0'/>
      <joint name="musterd_bottle_shoulder" limited="false"/>
      <include file="environments/includes/body_006_mustard_bottle.xml"/>
    </body>

  </worldbody>

  <tendon>
    <fixed name="t1">
      <joint joint="root_x" coef="1"/>
      <joint joint="root_y" coef="0"/>
    </fixed>
    <fixed name="t2">
      <joint joint="root_x" coef="0"/>
      <joint joint="root_y" coef="1"/>
    </fixed>
  </tendon>

  <actuator>
    <motor name="t1" tendon="t1"/>
    <motor name="t2" tendon="t2"/>
    <motor name="shoulder" joint="shoulder"/>
  </actuator>
</mujoco>
